<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.samyotech.matrimony.fragment.registration.SocialDetails">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:paddingLeft="@dimen/login_margin_txt_top_10"
        android:paddingRight="@dimen/login_margin_txt_top_10">

        <com.samyotech.matrimony.view.CustomTextViewBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/login_margin_txt_top_10"
            android:text="@string/martial_details"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />

        <com.samyotech.matrimony.view.InputFieldView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/login_margin_txt_top_5"
            android:visibility="visible">

            <com.samyotech.matrimony.view.CustomEditText
                android:id="@+id/etMaritial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/marital" />
        </com.samyotech.matrimony.view.InputFieldView>


        <com.samyotech.matrimony.view.InputOpenFieldView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/login_margin_txt_top_5"
            android:visibility="visible">

            <com.samyotech.matrimony.view.CustomEditText
                android:id="@+id/etGotra"
                android:layout_width="match_parent"
                android:imeOptions="actionNext"
                android:layout_height="wrap_content"
                android:hint="@string/gotra"
                android:singleLine="true" />
        </com.samyotech.matrimony.view.InputOpenFieldView>

        <com.samyotech.matrimony.view.InputOpenFieldView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/login_margin_txt_top_5"
            android:visibility="visible">

            <com.samyotech.matrimony.view.CustomEditText
                android:id="@+id/etGotraNanihal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionNext"
                android:hint="@string/gotra_nanihal"
                android:singleLine="true" />
        </com.samyotech.matrimony.view.InputOpenFieldView>

        <com.samyotech.matrimony.view.InputFieldView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/login_margin_txt_top_5"
            android:visibility="visible">

            <com.samyotech.matrimony.view.CustomEditText
                android:id="@+id/etManglik"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/manglik" />
        </com.samyotech.matrimony.view.InputFieldView>

        <com.samyotech.matrimony.view.CustomTextViewBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/login_margin_txt_top_10"
            android:text="@string/birth_details"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />


        <com.samyotech.matrimony.view.InputFieldView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/login_margin_txt_top_5"
            android:visibility="visible">

            <com.samyotech.matrimony.view.CustomEditText
                android:id="@+id/etBirthTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/birth_time" />
        </com.samyotech.matrimony.view.InputFieldView>

        <com.samyotech.matrimony.view.InputOpenFieldView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/login_margin_txt_top_5"
            android:visibility="visible">

            <com.samyotech.matrimony.view.CustomEditText
                android:id="@+id/etBirthPlace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/birth_place"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:singleLine="true" />
        </com.samyotech.matrimony.view.InputOpenFieldView>


    </LinearLayout>

</ScrollView>